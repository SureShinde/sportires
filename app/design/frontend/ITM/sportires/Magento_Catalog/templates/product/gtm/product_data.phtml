$_product = $block->getProduct(); 

?>
<script>
// Add Producto al carrito
dataLayer.push({
  'event': 'addToCart',
  'ecommerce': {
    'currencyCode': 'MXN',
    'add': {
      'products': [{
        'name': '<?= $_product->getName(); ?>',
        'id': '<?= $_product->getId(); ?>',
        'price': '<?= number_format($_product->getFinalPrice(),2,'.',''); ?>',
        'brand': '<?= $_product->getAttributeText('autos_marcas'); ?>',
        'category': '<?= $_product->getAttributeText('autos_marcas'); ?>',
        'sku': '<?= $_product->getSku(); ?>',
        'quantity': 1
       }]
    }
  }
});
</script>
