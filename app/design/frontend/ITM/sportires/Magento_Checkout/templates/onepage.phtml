<script>
    require([
        "jquery",
    ], function ($) {
        
        setInterval(function(){ 
           var prende = $('#pagoOtraSucursal').val();
           $('.col-method .radio').each(function(){
            var selected = $(this).is(':checked');
            var method = $(this).val();
            if(selected == true){
                //$('#classyllama_llamacoin').parent().show();
                //$('#stripe_payments').parent().show();
                if(method == 'flatrate_flatrate' || method == 'instalacion_instalacion'){
                    $('#cashondelivery').parent().hide();
                    $('#classyllama_llamacoin').parent().show();
                    $('#stripe_payments').parent().show();
                }else{
                    if(prende == 'otraSucursal'){
                        $('#cashondelivery').parent().hide();
                        $('#classyllama_llamacoin').parent().show();
                        $('#stripe_payments').parent().show();
                    }else{
                        $('#cashondelivery').parent().show();
                        $('#classyllama_llamacoin').parent().hide();
                        $('#stripe_payments').parent().hide();
                    }
                    
                }
            }
            //console.log('PMetodo de envio seleccionado '+selected+' method '+method);
           });
            
        }, 1000);
        

    });
</script> 