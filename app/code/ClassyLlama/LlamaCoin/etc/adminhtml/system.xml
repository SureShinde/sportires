<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="classyllama_llamacoin" translate="label comment" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>First Data</label>
                <field id="active" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="title" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Title</label>
                </field>
                <field id="cctypes" translate="label" type="multiselect" sortOrder="65" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Credit Card Types</label>
                    <source_model>Magento\Payment\Model\Source\Cctype</source_model>
                </field>
                <field id="url_service" translate="label" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Url Service</label>
                </field> 
                <field id="store_id" translate="label" type="text" sortOrder="71" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Store Id</label>
                </field>         
                <field id="sharedsecret" translate="label" type="text" sortOrder="72" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Store shared secret</label>
                </field>    
                <field id="url_return" translate="label" type="text" sortOrder="73" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Url Return on Success</label>
                </field>  
                <field id="url_fail" translate="label" type="text" sortOrder="74" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Url Return on fail</label>
                </field>
                <field id="active_installments" translate="label" type="select" sortOrder="75" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enabled Installments</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>     
                <field id="installments" translate="label" type="text" sortOrder="76" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Installments</label>
                    <comment>separated by comma ,</comment>
                </field>
                <field id="installments_comision" translate="label" type="text" sortOrder="77" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Installments Comision</label>
                    <comment>separated by comma ,</comment>
                </field>  
                <field id="ips" translate="label" type="text" sortOrder="78" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>IPs para pruebas</label>
                    <comment>Vacio para que el metodo aparezca a todos los usuarios del sitio</comment>
                </field>                                                                             
            </group>
        </section>
    </system>
</config>